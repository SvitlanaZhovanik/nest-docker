{
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
        "**/*.e2e-spec.ts"
    ],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage/e2e",
    "collectCoverageFrom": [
        "src/**/*.ts"
    ]
}
